<h1>Create a Topic</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Enter topic name" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>

    <% end %>
  </div>
</div>